<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2>登月計劃精靈</h2>
    <div class="form-group">
      <label class="string optional control-label">這次的登月目標是什麼？</label>
      <span class='uneditable-input form-control'><%= @project.target %></span>
    </div>
    <div class="form-group">
      <label class="string optional control-label">明確的子目標是什麼？</label>
      <span class='uneditable-input form-control'><%= @project.subtarget %></span>
    </div>
    <div class="form-group">
      <label class="string optional control-label">怎樣才算成功？</label>
      <span class='uneditable-input form-control'><%= @project.success_define %></span>
    </div>
    <div class="form-group">
      <label class="string optional control-label">這件事有可能辦的到嗎？</label>
      <span class='uneditable-input form-control'><%= @project.possible %></span>
    </div>
    <%= render "reallife" %>
    <%= render "progress" %>

    <div class="form-group">
      <%= simple_form_for(@project) do |f| %>
        <%= f.simple_fields_for :notify do |c| %>
          <legend>寄送提醒郵件</legend>
          <div class="form-group col-lg-6">
            <%= c.input :email %>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.submit "計劃建立完成", class: "btn btn-lg btn-danger pull-right",
              data:{disable_with: "完成中..."}%>
        </div>
      <% end %>
    </div>

  </div>
</div>
