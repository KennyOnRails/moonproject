<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2>新增現實生活實現事項</h2>
    <%= simple_form_for @real_life, url: project_real_lives_path do |f| %>
      <div class="form-group">
        <%= f.input :schedule_type, label: "要實現的周期", collection: [["每天","daily"],["每週","weekly"],["每月","monthly"]], selected: "lead" %>
        <%= f.input :schedule_num, label: "周期數", collection: 1..31 %>
      </div>
      <div class="form-group">
        <%= f.input :description, as: :text, label: "要實現的內容" %>
      </div>
      <div class="form-group">
        <%= f.input :notify_flag, as: :boolean, label: "是否要提醒？" %>
      </div>
      <%=f.submit "Submit", class: "btn btn-primary", data:{disable_with: "Submitting..."}%>
    <% end %>
  </div>
</div>
