<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2>修改要完成的計劃內容</h2>
    <%= simple_form_for @progress, url: project_progress_path(@project,@progress) do |f| %>
      <div class="form-group">
        <%= f.input :deadline, as: :date, label: "完成期限日期" %>
      </div>
      <div class="form-group">
        <%= f.input :description, as: :text, label: "要完成的內容" %>
      </div>
      <div class="form-action">
        <%=f.submit "Submit", class: "btn btn-primary", data:{disable_with: "Submitting..."}%>
      </div>
    <% end %>
  </div>
</div>
